{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/SieveOperations.Api/bin/Debug/net10.0/SieveOperations.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/SieveOperations.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "name": "netcoredbg",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/SieveOperations.Api/bin/Debug/net10.0/SieveOperations.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "pipeTransport": {
              "pipeCwd": "${workspaceFolder}",
              "pipeProgram": "cmd.exe",
              "pipeArgs": ["/c"],
              "debuggerPath": "C:/Users/developer/netcoredbg/netcoredbg/netcoredbg.exe",
              "debuggerArgs": ["--interpreter=vscode"],
              "quoteArgs": true
            },
            "env": {
              "DOTNET_ENVIRONMENT": "Development"
            },
            // "logging": {
            //   "moduleLoad": false,
            //   "diagnosticsLog": {
            //     "protocolMessages": true
            //   }
            // }
        },
    ]
}